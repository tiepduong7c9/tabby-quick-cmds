{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2016",
    "noImplicitAny": false,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "dom",
      "es2015",
      "es7"
    ]
  },
  "exclude": ["node_modules", "dist"]
}
